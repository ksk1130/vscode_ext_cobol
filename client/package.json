{
  "name": "cobol-lsp-client",
  "version": "0.1.0",
  "description": "cobol LSP Client for VS Code",
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "vscode:prepublish": "npm run compile"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "cobol.loadCopybooks",
        "title": "COBOL: Load Copybooks for Current File"
      },
      {
        "command": "cobol.reloadProgramIndex",
        "title": "COBOL: Reload Program Index"
      },
      {
        "command": "cobol.openSettings",
        "title": "COBOL: Open Settings"
      }
    ],
    "languages": [
      {
        "id": "cobol",
        "extensions": [
          ".cbl",
          ".cob",
          ".cobol",
          ".cpy",
          ".CBL",
          ".COB",
          ".COBOL",
          ".CPY"
        ],
        "aliases": [
          "COBOL",
          "cobol"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cobol",
        "scopeName": "source.cobol",
        "path": "./syntaxes/cobol.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "COBOL Extension",
      "properties": {
        "cobol.copybookPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "title": "COBOL Extension: Copybook Paths",
          "default": [
            "./copybooks",
            "./copy",
            "./COPY"
          ],
          "description": "COPYBOOKファイルの検索パス"
        },
        "cobol.programSearchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "title": "COBOL Extension: Program Search Paths",
          "default": [
            "./src",
            "./programs",
            "./SRC"
          ],
          "description": "COBOLプログラムファイルの検索パス"
        },
        "cobol.fileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "title": "COBOL Extension: File Extensions",
          "default": [
            ".cbl",
            ".cob",
            ".cobol",
            ".CBL",
            ".COB",
            ".COBOL"
          ],
          "description": "COBOLファイルの拡張子"
        },
        "cobol.copybookExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "title": "COBOL Extension: Copybook Extensions",
          "default": [
            ".cpy",
            ".CPY",
            ".cbl",
            ".CBL",
            ""
          ],
          "description": "COPYBOOKファイルの拡張子"
        },
        "cobol.copybookAutoLoad": {
          "type": "boolean",
          "default": false,
          "title": "COBOL Extension: Copybook Auto Load",
          "description": "COPYBOOKを自動で読み込む（無効時は手動コマンドでロード）"
        },
        "cobol.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "title": "COBOL Extension: Trace Server",
          "description": "LSPサーバーのトレースレベル"
        }
      }
    }
  },
  "dependencies": {
    "@logtape/logtape": "^1.3.5",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}
