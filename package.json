{
  "name": "cobol-lsp",
  "version": "0.1.0",
  "description":  "cobol Language Server Protocol",
  "publisher": "unknown",
  "private": true,
  "main": "./client/out/extension.js",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:cobol"
  ],
  "contributes": {
    "configurationDefaults": {
      "[cobol]": {
        "editor.rulers": [7, 8, 12]
      }
    },
    "languages": [
      {
        "id":  "cobol",
        "extensions": [".cbl", ".cob", ".cobol", ".cpy", ".CBL", ".COB", ".COBOL", ".CPY"],
        "aliases": ["COBOL", "cobol"],
        "configuration": "./client/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language":  "cobol",
        "scopeName": "source.cobol",
        "path": "./client/syntaxes/cobol.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "cobol LSP",
      "properties": {
        "cobol.copybookPaths": {
          "type":  "array",
          "default":  ["./copybooks", "./copy", "./COPY"],
          "description": "COPYBOOKファイルの検索パス"
        },
        "cobol.programSearchPaths": {
          "type": "array",
          "default": ["./src", "./programs", "./SRC"],
          "description": "COBOLプログラムファイルの検索パス"
        },
        "cobol.fileExtensions": {
          "type":  "array",
          "default":  [".cbl", ".cob", ".cobol", ".CBL", ".COB", ".COBOL"],
          "description": "COBOLファイルの拡張子"
        },
        "cobol.copybookExtensions": {
          "type": "array",
          "default": [".cpy", ".CPY", ".cbl", ".CBL", ""],
          "description": "COPYBOOKファイルの拡張子"
        },
        "cobol.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "verbose",
          "description": "LSPサーバーのトレースレベル"
        }
      }
    }
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client":  "cd client && npm run compile",
    "compile:server":  "cd server && npm run compile",
    "watch": "npm run watch:client & npm run watch:server",
    "watch:client": "cd client && npm run watch",
    "watch:server": "cd server && npm run watch",
    "package": "vsce package",
    "vscode:prepublish": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-languageserver-types": "^3.17.5",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-uri": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@vscode/vsce": "^2.19.0",
    "typescript":  "^5.0.0"
  }
}
